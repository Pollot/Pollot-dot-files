# Terminal
mod4 + Return
    kitty

# Launcher
mod4 + r
    rofi -show drun

# Browser
mod4 + b
    firefox

# File browser
mod4 + v
    nemo

# Text editor
mod4 + c
    code

# Keepass
mod4 + p
    keepassxc

# Discord
mod4 + d
    flatpak run com.discordapp.Discord

# Lock screen
mod4 + x
    i3lock -c 000000

# Multimedia
XF86AudioPrev
    playerctl previous

XF86AudioPlay
    playerctl play-pause

XF86AudioNext
    playerctl next

XF86AudioRaiseVolume
    $HOME/.config/sxhkd/volume/volume.sh up

XF86AudioLowerVolume
    $HOME/.config/sxhkd/volume/volume.sh down

XF86AudioMute
    $HOME/.config/sxhkd/volume/volume.sh mute

# Screenshot
Print
    flameshot full

# Screenshot with GUI
mod4 + Print
    flameshot gui
